{
  "editor.formatOnSave": true,
  "editor.tabSize": 4,
  "files.autoSave": "onWindowChange",
  "files.associations": {
    "*.html": "html",
    "*.scss": "scss",
    "*.ts": "typescript"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },

  "files.exclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.vscode/**": true,
    "**/.junie/**": true,
    "**/.github/**": true,
    "**/.gemini/**": true,
    "**/.cursor/**": true,
    "**/.claude/**": true,
    "**/.windsurf/**": true,
    "**/.angular/**": true
  }
}
